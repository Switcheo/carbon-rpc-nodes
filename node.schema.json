{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/schema.json",
    "title": "Node Lists",
    "description": "Node Lists allow frontends to fetch metadata associated with Carbon nodes.",
    "type": "object",
    "required": [
        "network",
        "nodes"
    ],
    "properties": {
        "network": {
            "type": "string",
            "enum": [
                "mainnet",
                "testnet",
                "devnet"
            ]
        },
        "nodes": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/node"
            }
        }
    },
    "$defs": {
        "node": {
            "type": "object",
            "required": [
                "nodeId",
                "rpcUrl",
                "wsUrl",
                "faucetUrl",
                "insightsUrl",
                "restUrl",
                "moniker",
                "appBuild",
                "lastupdated",
                "rpcUptime",
                "wsUptime",
                "insightUptime",
                "tmWsUrl",
                "creator"
            ],
            "properties": {
                "description": {
                    "type": "string",
                    "description": "[OPTIONAL] A short description of the node"
                },
                "nodeId": {
                    "type": "string",
                    "description": "The unique nodeId of the node.",
                    "pattern": "/^\\w{5,32}$/"
                },
                "rpcUrl": {
                    "type": "string",
                    "description": "The RPC Url of the node",
                    "pattern": "/^https:\/\/.+/"
                },
                "wsUrl": {
                    "type": "string",
                    "description": "The WS Url of the node",
                    "pattern": "/^wss:\/\/.+\/ws$/"
                },
                "faucetUrl": {
                    "type": "string",
                    "description": "The Faucet URL of the node",
                    "default": "",
                    "pattern": "/$|^https:\/\/.+/"
                },
                "insightsUrl": {
                    "type": "string",
                    "description": "The Insights URL of the node",
                    "default": "",
                    "pattern": "/$|^https:\/\/.+/"
                },
                "restUrl": {
                    "type": "string",
                    "description": "The REST URL of the node",
                    "pattern": "/^https:\/\/.+/"
                },
                "moniker": {
                    "type": "string",
                    "description": "The display name of the node"
                },
                "appBuild": {
                    "type": "string",
                    "description": "The app build of the node",
                    "enum": [
                        "mainnet",
                        "testnet",
                        "devnet"
                    ]
                },
                "lastupdated": {
                    "type": "string",
                    "description": "The string representation of timestamp in the format yyyy-MM-ddTHH:mm:ssZ (RFC3339)",
                    "format": "date-time"
                },
                "rpcUptime": {
                    "type": "string",
                    "description": "The string representation of number",
                    "pattern": "/^(\\d+(\\.\\d{0,2})?|\\.?\\d{1,2})$/"
                },
                "wsUptime": {
                    "type": "string",
                    "description": "The string representation of number",
                    "pattern": "/^(\\d+(\\.\\d{0,2})?|\\.?\\d{1,2})$/"
                },
                "insightUptime": {
                    "type": "string",
                    "description": "The string representation of number",
                    "pattern": "/^(\\d+(\\.\\d{0,2})?|\\.?\\d{1,2})$/"
                },
                "tmWsUrl": {
                    "type": "string",
                    "description": "The URL for Tendermint websocket with the pattern wss://<rpcUrl domain>/.",
                    "default": "",
                    "pattern": "/^wss:\/\/.+/"
                },
                "creator": {
                    "type": "object",
                    "description": "The details of the creator",
                    "required": [
                        "name",
                        "telegram"
                    ],
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "The name of the creator"
                        },
                        "telegram": {
                            "type": "string",
                            "description": "The telegram handle of the creator (without @)",
                            "pattern": "/^\\w{5,32}$/"
                        },
                        "email": {
                            "type": "string",
                            "description": "The email address of the creator",
                            "format": "email",
                            "pattern": "^\\S+@\\S+\\.\\S+$",
                            "minLength": 6,
                            "maxLength": 254
                        }
                    }
                }
            }
        }
    }
}